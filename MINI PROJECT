import pandas as pd
from surprise import SVD, Dataset, Reader
from surprise.model_selection import train_test_split
from surprise import accuracy

# Step 1: Load and preprocess data
data = {
    'user_id': [1, 2, 3, 4, 5],
    'product_id': [101, 102, 103, 104, 105],
    'rating': [5, 4, 3, 5, 4]
}
df = pd.DataFrame(data)

# Step 2: Load data into Surprise
reader = Reader(rating_scale=(1, 5))
dataset = Dataset.load_from_df(df[['user_id', 'product_id', 'rating']], reader)

# Step 3: Train-test split
trainset, testset = train_test_split(dataset, test_size=0.25)

# Step 4: Build and train the SVD model
model = SVD()
model.fit(trainset)

# Step 5: Test the model
predictions = model.test(testset)

# Step 6: Evaluate the model
rmse = accuracy.rmse(predictions)
print(f"RMSE: {rmse}")

# Step 7: Generate Recommendations
def recommend_items(user_id, model, data):
    all_items = df['product_id'].unique()
    rated_items = df[df['user_id'] == user_id]['product_id'].values
    recommendations = []
    
    for item in all_items:
        if item not in rated_items:
            est_rating = model.predict(user_id, item).est
            recommendations.append((item, est_rating))
    
    recommendations.sort(key=lambda x: x[1], reverse=True)
    return recommendations[:5]

user_recommendations = recommend_items(1, model, df)
print("Top Recommendations:", user_recommendations)
